@model TicketsTrainDomain.Model.TicketTypeTrain

@{
    ViewData["Title"] = "Видалення зв'язку";
}

<h2>@ViewData["Title"]</h2>

<h3>Ви впевнені, що хочете видалити цей зв'язок?</h3>
<div>
    <h4>Зв'язок типів квитків і потяга</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Тип квитка</dt>
        <dd class="col-sm-10">@Model.TicketType?.Name</dd>
        <dt class="col-sm-2">Поїзд</dt>
        <dd class="col-sm-10">@Model.Train?.TrainName</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
    </form>
</div>
