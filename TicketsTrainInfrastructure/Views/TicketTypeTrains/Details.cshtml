@model TicketsTrainDomain.Model.TicketTypeTrain

@{
    ViewData["Title"] = "Деталі зв'язку";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Зв'язок типів квитків і потяга</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Тип квитка</dt>
        <dd class="col-sm-10">@Model.TicketType?.Name</dd>
        <dt class="col-sm-2">Поїзд</dt>
        <dd class="col-sm-10">@Model.Train?.TrainName</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редагувати</a>
    <a asp-action="Index" class="btn btn-secondary">Повернутися до списку</a>
</div>
