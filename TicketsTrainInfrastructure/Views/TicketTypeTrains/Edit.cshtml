@model TicketsTrainDomain.Model.TicketTypeTrain

@{
    ViewData["Title"] = "Редагування зв'язку";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TicketTypeId" class="control-label">Тип квитка</label>
                <select asp-for="TicketTypeId" class="form-control" asp-items="ViewBag.TicketTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TrainId" class="control-label">Поїзд</label>
                <select asp-for="TrainId" class="form-control" asp-items="ViewBag.TrainId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>
