<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Бронювання квитків на потяг</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Бронювання квитків на потяг</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Перемикач навігації">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Tickets")">Квитки</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "RailwayStations")">Станції</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Routes")">Маршрути</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Trains")">Потяги</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Users")">Користувачі</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "TicketTypes")">Типи квитків</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "TicketTypeTrains")">Типи квитків (управління)</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "StationAtRoutes")">Станції на маршруті (управління)</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "TrainAtRoutes")">Потяг на маршруті (управління)</a></li>


                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-3">
        @RenderBody()
    </div>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">&copy; 2025 Бронювання квитків на потяг</span>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
