@model TicketsTrainDomain.Model.Ticket

<h3>@ViewData["Title"]</h3>

<h4>Ви впевнені, що хочете скасувати цей квиток?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">Пасажир</dt>
        <dd class="col-sm-8">@Model.User.Name @Model.User.Surname</dd>

        <dt class="col-sm-4">Дата подорожі</dt>
        <dd class="col-sm-8">@Model.DateOfTravel.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-4">Станція відправлення</dt>
        <dd class="col-sm-8">@Model.DispatchStation.CityTown</dd>

        <dt class="col-sm-4">Станція прибуття</dt>
        <dd class="col-sm-8">@Model.ArrivalStation.CityTown</dd>

        <dt class="col-sm-4">Потяг</dt>
        <dd class="col-sm-8">@Model.Train.TrainName</dd>

        <dt class="col-sm-4">Тип квитка</dt>
        <dd class="col-sm-8">@Model.TicketTypeTrain.TicketType.Name</dd>
    </dl>

    <form asp-action="Cancel">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Скасувати квиток" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Повернутися до списку</a>
    </form>
</div>