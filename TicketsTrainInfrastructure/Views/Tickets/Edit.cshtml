@model TicketsTrainDomain.Model.Ticket

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label class="control-label">Пасажир</label>
                <select name="UserId" class="form-control" asp-items="ViewBag.Users">
                    <option value="">-- Виберіть пасажира --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <!-- Відображення інформації про квиток (тільки для читання) -->
            <div class="form-group mb-3">
                <label class="control-label">Дата подорожі</label>
                <input asp-for="DateOfTravel" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Станція відправлення</label>
                <input value="@Model.DispatchStation.CityTown" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Станція прибуття</label>
                <input value="@Model.ArrivalStation.CityTown" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Потяг</label>
                <input value="@Model.Train.TrainName" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Тип квитка</label>
                <input value="@Model.TicketTypeTrain.TicketType.Name" class="form-control" readonly />
            </div>

            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Повернутися до списку</a>
            </div>
        </form>
    </div>
</div>